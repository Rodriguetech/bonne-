{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block  body %}
<section class="auth-section login-section text-center py-5">
	    <div class="container">
		    <div class="site-logo mb-4">
            <a class="navbar-brand me-0" href="index.html">
               <span class="logo-text text-primary">BonneFoie <span class="text-alt text-black-50">Finance</span></span></a></div>
            </a>
        </div> 
		     
		    <div class="auth-wrapper mx-auto shadow p-5 rounded">

				<h2 class="auth-heading text-center mb-5">Connecter vous sur BonneFoie Finance</h2>
				
				<div class="auth-form-container text-start mx-auto">
					<form class="auth-form login-form"   method="post">
                    
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
         
						<div class="email mb-3">
							<label  for="inputUuid">Identifiant</label>
							<input value="{{ last_username }}" name="uuid" placeholder="Identifiant à 5 chiffres " id="inputUuid" class="form-control signin-email"  required="required">
						</div><!--//form-group-->
						<div class="password mb-3">
							<label for="inputPassword">Mot de passse</label>
							<input type="password" name="password" id="inputPassword" class="form-control signin-password" placeholder="******" autocomplete="current-password"
                                                   placeholder=" Mot de passe" required>

												   <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						
						</div><!--//form-group-->
						<div class="text-center">
							<button type="submit" class="btn btn-primary w-100 theme-btn mx-auto">Se connecter</button>
						</div>
					</form>
					
					<div class="auth-option text-center pt-5">Vous avez pas un compte ?  <a class="text-link" href="{{ path('register') }}"> Creér maintenant</a>.</div>
				</div><!--//auth-form-container-->
				
			</div><!--//auth-wrapper-->
	    </div><!--//container-->
</section><!--//auth-section-->
{% endblock %}
 